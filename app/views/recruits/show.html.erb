<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><%= link_to "Home", root_path %></li>
    <li class="breadcrumb-item active" aria-current="page"><%= @recruit.name.titleize %></li>
  </ol>
</nav>

<h1 class="m-0"><%= @recruit.name %></h1>
<h2 class="m-0 mb-3"><span class="badge badge-pill badge-success"><%= number_to_percentage(@recruit.percent_complete, precision: 0) %> Completed</span></h2>

<ul class="list-inline page-actions">
  <li class="list-inline-item pr-2">
    <%= link_to edit_recruit_path(@recruit) do %>
      <i class="fas fa-edit"></i>
      Edit
    <% end %>
  </li>

  <li class="list-inline-item pr-2">
    <%= link_to new_recruit_task_path(@recruit) do %>
      <i class="fas fa-tasks"></i>
      Add Task
    <% end %>
  </li>

  <li class="list-inline-item pr-2">
    <%= link_to recruit_messages_path(@recruit) do %>
      <i class="fas fa-comments"></i>
      Messages <span class="badge badge-danger"><% if @recruit.messages.where(read_at: nil).count > 0 %><%= @recruit.messages.where(read_at: nil).count %><% end -%></span>
    <% end %>
  </li>

  <li class="list-inline-item pr-2">
    <%= link_to @recruit, method: :delete, data: {confirm: "Are you sure?"} do %>
      <i class="fas fa-trash"></i>
      Delete
    <% end %>
  </li>
</ul>
<hr class="mt-3 mb-3">

<%= render @tab %>
